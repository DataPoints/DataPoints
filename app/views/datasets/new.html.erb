<h1 class="title">Upload your Dataset</h1>

<div class="center">
  <p>Tip: http://labss2.fiit.stuba.sk/TeamProject/2014/team03is-si/datasets/datasets_pattern/test.csv</p>
</div>

<div>
  <div>
    <%= form_for(@dataset) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %><br>
        <%= f.text_field :name %><br>

        <%= f.label :description %><br>
        <%= f.text_field :description %><br>

        <%= f.label :link %><br>
        <%= f.text_field :link, placeholder: 'http://' %><br><br>

        <%= f.submit 'Analyze!', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
