<h1>Your profile</h1>
<div>
  <div>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, 'Confirm password' %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit 'Update', class: '' %>
    <% end %>
  </div>
</div>