<h1 class="title">Update your E-mail</h1>

<div class="wrapper">
  <%= form_for(@user, url: user_email_edit_path) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <table id="profile_table">
        <tr>
          <td>New E-mail</td>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <td>Password</td>
          <td><%= f.password_field :password, placeholder: 'Confirm with password..' %></td>
        </tr>
        <tr>
          <td><br/><%= link_to 'Back', user_profile_edit_path, class: 'btn gray' %></td>
          <td><br/><%= f.submit 'Save changes' %></td>
        </tr>
      </table>
  <% end %>
</div>